{
  "name": "@zazen/stylelint-config",
  "description": "Lint CSS, free of weariness and confusion",
  "license": "ISC",
  "author": "Jeff <rustyangel@gmail.com> (https://tidaltheory.co)",
  "homepage": "https://github.com/stormwarning/zazen-stylelint-config",
  "repository": "stormwarning/zazen-stylelint-config",
  "version": "1.0.0",
  "scripts": {
    "precommit": "lint-staged && npm test",
    "lint": "npm-run-all lint:*",
    "lint:markdown": "remark .",
    "lint:scripts": "prettier-eslint '**/*.js' --list-different",
    "semantic-release": "semantic-release",
    "test": "npm run lint"
  },
  "dependencies": {
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-order": "^2.0.0"
  },
  "peerDependencies": {
    "stylelint": ">=9"
  },
  "devDependencies": {
    "@zazen/eslint-config": "^0.3.0",
    "@zazen/semantic-release": "^0.1.1",
    "husky": "^1.3.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^6.0.1",
    "remark-github": "^7.0.5",
    "remark-preset-lint-markdown-style-guide": "^2.1.2",
    "remark-toc": "^5.1.1",
    "semantic-release": "^15.13.1"
  },
  "keywords": [
    "stylelint-config"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "release": {
    "extends": "@zazen/semantic-release"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-markdown-style-guide",
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-list-item-spacing",
        false
      ],
      "github",
      "toc"
    ],
    "settings": {
      "commonmark": true,
      "bullet": "-",
      "listItemIndent": 1,
      "rule": "-",
      "ruleSpaces": false,
      "strong": "*",
      "emphasis": "*"
    }
  }
}
